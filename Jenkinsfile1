pipeline {
    environment {

        SCANNER_HOME= tool 'sonarcloud'

    }
    
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Testingggg') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Sonar') {
            steps {
                echo 'SonarCloud'
                sh ' cd node '
                 sh '''withSonarQubeEnv('sonarcloud') {
                    sonar-scanner \
                        -Dsonar.organization=mendozaGabo \
                        -Dsonar.projectKey=mendozaGabo_DOTT-Gabriel \
                        -Dsonar.sources=. \
                        -Dsonar.host.url=https://sonarcloud.io '''
                }
            }
        
        stage('Deployingggg') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}