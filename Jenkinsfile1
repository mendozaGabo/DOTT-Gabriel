pipeline {
    agent any
    environment {
SCANNER_HOME= tool 'sonarDOTT';
    }

    tools {
        nodejs "node"
    }

  stages {
    stage('install') {
      steps {
        dir('node') {
          sh 'npm install'
        }
      }
    }

    stage('build') {
      steps {
        sh 'echo "Im cooking something up" '
        git branch: 'master', url: 'https://github.com/mendozaGabo/DOTT-Gabriel.git'
        }
      }
      stage('Static Code Analysis') {
            steps {
                withSonarQubeEnv('SonarCloud') {
                    sh '''${scannerHome}/bin/sonar-scanner \
                        -Dsonar.organization=mendozaGabo \
                        -Dsonar.projectKey=mendozaGabo_DOTT-Gabriel \
                        -Dsonar.sources=./node/ \
                        -Dsonar.host.url=https://sonarcloud.io
                    
                }
        }
    }
}